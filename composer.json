{
  "name": "eureka/component-console",
  "description": "Component console to run script with Eureka Framework ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Console\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Console\\Tests\\Unit\\": "./tests/unit/",
      "Eureka\\Component\\Console\\Tests\\Integration\\": "./tests/integration/"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.3.*||8.4.*||8.5.*",
    "ext-mbstring": "*",
    "lcobucci/clock": "^2.3||^3.0",
    "psr/clock": "^1.0",
    "psr/container": "^1.0||^2.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92.3",
    "phpstan/phpstan": "^2.1.33",
    "phpstan/phpstan-phpunit": "^2.0.11",
    "phpunit/phpcov": "^11.0.3",
    "phpunit/phpunit": "^12.5.4",
    "shipmonk/composer-dependency-analyser": "^1.8.4"
  },

  "bin": ["bin/console"]
}
