{
  "name": "eureka/component-console",
  "description": "Component console to run script with Eureka Framework ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Console\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Console\\Tests\\Unit\\": "./tests/unit/",
      "Eureka\\Component\\Console\\Tests\\Integration\\": "./tests/integration/"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-mbstring": "*",
    "lcobucci/clock": "^2.3||^3.0",
    "psr/clock": "^1.0",
    "psr/container": "^1.0||^2.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.40.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.4.2",
    "phpstan/phpstan": "^1.10.45",
    "phpstan/phpstan-phpunit": "^1.3.15"
  },

  "bin": ["bin/console"]
}
